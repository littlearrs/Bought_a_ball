{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build opencv project",
            "command": "D:/MinGW/mingw64/bin/g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}.exe",
                "-I",
                "D:/opencv4.6/build/x64/MinGW/install/include",
                 "-I",
                "D:/opencv4.6/build/x64/MinGW/install/include/opencv4",
                "-L",
                "D:/opencv4.6/build/x64/MinGW/bin",
                "-lopencv_world460"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile OpenCV program using g++"
        }
    ]
}
